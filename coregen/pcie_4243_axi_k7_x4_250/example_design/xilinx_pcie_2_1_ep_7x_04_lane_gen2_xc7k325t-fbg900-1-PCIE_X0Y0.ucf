NET "pcie_7x_v1_3_i/gt_top_i/pipe_wrapper_i/pipe_lane[1].pipe_rate_i/*" TNM_NET = FFS "MC_PIPE";
NET "pcie_7x_v1_3_i/gt_top_i/pipe_wrapper_i/pipe_lane[2].pipe_rate_i/*" TNM_NET = FFS "MC_PIPE";
NET "pcie_7x_v1_3_i/gt_top_i/pipe_wrapper_i/pipe_lane[3].pipe_rate_i/*" TNM_NET = FFS "MC_PIPE";

TIMESPEC "TS_PIPE_RATE" = FROM "MC_PIPE" TS_CLK_USERCLK*0.5;


NET "pcie_7x_v1_3_i/gt_top_i/pipe_wrapper_i/pipe_reset_i/cpllreset" TIG;
